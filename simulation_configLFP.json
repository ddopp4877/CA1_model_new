      "amp": 0.6,
      "delay": 50.0,
      "duration": 8
 },
 "se_voltage_clamp": {
  "input_type": "voltage_clamp",
  "module": "SEClamp",
  "node_set": "all",
  "gids": [
    13053
  ],
  "amps": [
    [
      -62,
      -62,
      -62
    ]
  ],
  "durations": [
    [
      300,
      300,
      300
    ]
  ],
  "rs": [0.01],
  "delay": 0
}





 
 },
 
  "output": {
    "log_file": "log.txt",
